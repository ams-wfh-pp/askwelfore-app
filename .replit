language = "python3"
modules = ["python-3.11"]

# WelFore Health | AskWelFore App Configuration
# Defines how Replit runs and deploys your FastAPI app

run = "python3 -m uvicorn main:app --host=0.0.0.0 --port=5000"

[deployment]
# Required for Replit Deploy (Cloud Run)
deploymentTarget = "cloudrun"


[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-24_05"
packages = ["poppler_utils"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m uvicorn main:app --host=0.0.0.0 --port=5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "cloudrun"


